{
	"name": "Goodbye HTML",
	"version": "0.1",
	"author": "David Noftsier",
	"description": "Goodbye HTML is a tool for tracking and removing unwanted HTML elements on web pages",
	"permissions": ["storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"],
			"run_at": "document_idle"
		}
	],
	"browser_action" :{
		"default_popup": "blockElements.html"
	},
	"manifest_version": 2
}
